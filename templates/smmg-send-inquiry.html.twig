<div class="smmg-subscriber-foot">
  <button type="button" class="btn btn-default" data-dismiss="modal">Abbrechen</button>
  <a role="button" class="btn btn-primary" href="/smmg/send/{{ message.id }}"><i class="fas fa-paper-plane" aria-hidden="true"></i>
    Nachricht Senden
  </a>
</div>
